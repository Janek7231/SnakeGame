<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SnakeGame"
        Title="Snake Game" Height="500" Width="800">
    <Grid>
        <!-- Menu kontrolka -->
        <local:Menu x:Name="MenuControl" Visibility="Visible"/>

        <!-- Gra kontrolka -->
        <local:SnakeGameControl x:Name="GameControl" Visibility="Collapsed"/>
    </Grid>
</Window>
